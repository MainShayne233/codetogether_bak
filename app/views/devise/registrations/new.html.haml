

%h2.center Sign up

.center

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      %br/
      = f.text_field :username, class: 'form-control smaller', placeholder: 'Username', autofocus: true
    .field
      %br/
      = f.password_field :password, class: 'form-control smaller', placeholder: 'Password', autocomplete: "off"
    .field
      %br/
      = f.password_field :password_confirmation, class: 'form-control smaller', placeholder: 'Password Confirmation', autocomplete: "off"
      %br/

    .actions
      = f.submit "Sign up", class: 'btn btn-primary form-btn'
  %br/
  = render "devise/shared/links"
